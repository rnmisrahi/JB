@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>JB Car Rental</h1>
    <img src="~/JB.png" /> <img src="~/JB.jpg" />
    <p class="lead">Car Rental JB gives discounts to Asp.Net programmers.</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div>
    @{
        if (TempData["Added"] != null)
        {
            var v = TempData["Added"] as String;
            <div id="divfade">
                <p><p>
                    <b><font size="1" color="red">@v</font></b>
                </p></p>
            </div>
        }
    }
</div>


<div class="row">
    <div class="col-md-4">
        <h2>Cheapest More Reliable Cars</h2>
        <h2>@Html.ActionLink("Reservations", "Create", "Reservations")
        </h2>
    </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>
            At JB Car Rental we proudly offer a 10% discount to good ASP.Net developers.
        </p>

    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>Unlimited Mileage on all our cars.</p>

    </div>
</div>