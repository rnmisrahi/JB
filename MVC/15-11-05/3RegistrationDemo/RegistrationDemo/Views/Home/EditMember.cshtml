@model RegistrationDemo.Models.Member

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditMember</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm("SaveMember", "Home")) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Member</legend>
    
            @Html.HiddenFor(model => model.Id)
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Seniority)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Seniority)
                @Html.ValidationMessageFor(model => model.Seniority)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Selected)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Selected)
                @Html.ValidationMessageFor(model => model.Selected)
            </div>
    
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("Back to List", "DisplayMembers")
        @*@Html.ActionLink("Home", "Index", "Home")*@
    </div>
</body>
</html>
