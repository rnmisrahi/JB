@model Calculator.Models.ExerciseVM

<h2>ShowExercise</h2>

<form action="/Home/ExerciseResult">
    First:<br />
    <input type="text" name="exercise.first" value="@Model.Exercise.First"/>
    <br /><br />
    <select name="operation">
        <option value="Add"      selected='@(Model.Operation=="Add")'>+</option>
        <option value="Subtract" selected='@(Model.Operation=="Subtract")'>-</option>
        <option value="Mul"      selected='@(Model.Operation=="Mul")'>*</option>
        <option value="Div"     selected='@(Model.Operation=="Div")'>:</option>
    </select>
    <br /><br />
    Second:<br />
    <input  name="exercise.second" value="@Model.Exercise.Second"/>
    <br /><br />
    <input type="submit" value="Calculate" />
    <br /><br />
    <div>
        @Model.Result
    </div>
</form>
