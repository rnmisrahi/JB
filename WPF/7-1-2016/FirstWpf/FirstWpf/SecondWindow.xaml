<Window x:Class="FirstWpf.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWpf"
        mc:Ignorable="d"
        Title="SecondWindow" Height="300" Width="300">
    <StackPanel>
        <TextBox Name="txtMessage" Margin="20,10,40,10"></TextBox>
        <CheckBox Name="chkInclude"  Margin="20,10,40,10">Include message</CheckBox>
        <Button Click="Button_Click"  Margin="20,10,40,10">Click Me!</Button>
    </StackPanel>
</Window>
