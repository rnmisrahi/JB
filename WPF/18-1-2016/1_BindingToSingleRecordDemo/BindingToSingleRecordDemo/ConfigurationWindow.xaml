<Window x:Class="BindingToSingleRecordDemo.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="525" FontSize="15">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10" />
                <Setter Property="MinWidth" Value="100" />
            </Style>
        </StackPanel.Resources>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="20" TextDecorations="Underline">
                Configuration Settings
            </TextBlock>
        </StackPanel>
        <StackPanel>
            <Label>Title:</Label>
            <TextBox />
        </StackPanel>
        <StackPanel>
            <Label>Items in window:</Label>
            <TextBox />
        </StackPanel>
        <StackPanel>
            <CheckBox>Upper case</CheckBox>
        </StackPanel>
        <StackPanel>
            <Label>Color:</Label>
            <TextBox />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button>Save</Button>
            <Button>Close</Button>
        </StackPanel>
    </StackPanel>
</Window>
